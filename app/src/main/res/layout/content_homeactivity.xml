<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".homeactivity"
    tools:showIn="@layout/activity_homeactivity">

    <androidx.cardview.widget.CardView
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="192dp" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/userimage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_account_circle_black_24dp" />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:hint="Name"
                android:paddingLeft="20dp"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/uid"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:paddingLeft="40dp"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
        <TextView
            android:layout_marginTop="60dp"
            android:id="@+id/type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold"
            tools:fontFamily="cursive" />
        <LinearLayout
            android:layout_marginTop="80dp"
            android:paddingLeft="20dp"
            android:layout_marginLeft="280dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/like"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_favorite_black_24dp"/>

            <Button
                android:id="@+id/buy"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_add_shopping_cart_black_24dp"/>



        </LinearLayout>

        <TextView
            android:id="@+id/desc"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:fontFamily="casual"
            android:layout_marginTop="100dp"
            android:hint="your Descriptian"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />



        <ImageView
            android:layout_marginTop="130dp"
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            />
        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="250dp"
            android:adjustViewBounds="true"
            />

    <LinearLayout
        android:layout_marginTop="390dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingLeft="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    </LinearLayout>


</LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>