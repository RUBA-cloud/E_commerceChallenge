<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".additem"
    tools:showIn="@layout/app_bar_additem">

    <LinearLayout
        android:background="#C1BCD8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ProductDiscriptian"
            android:layout_width="match_parent"
            android:layout_height="89dp"
            android:ems="10"
            android:hint="Write Product Descriptian"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/ProductName"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:ems="10"
            android:gravity="center"
            android:hint=" Product Name"
            android:inputType="textPersonName"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:background="#E4DDDC"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/Productsalary"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Write Product Descriptian"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/Productsalary"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:ems="10"
                android:gravity="center"
                android:hint="Write Product salary"
                android:inputType="textPersonName" />
        </LinearLayout>

        <EditText
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Write Product Thumbnail"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/addimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Add image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="79dp"

            android:orientation="horizontal">


            <ImageView
                android:id="@+id/image1"
                android:layout_width="162dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />
        </LinearLayout>
        <EditText
            android:id="@+id/productid"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:ems="10"
            android:gravity="center"
            android:hint="product Id"
            android:inputType="number" />

        <EditText
            android:id="@+id/discount"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:ems="10"
            android:gravity="center"
            android:hint="discount"
            android:inputType="number" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next" />
    </LinearLayout>
</RelativeLayout>